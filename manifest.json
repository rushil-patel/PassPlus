{
	"manifest_version": 2,
	"name" : "Pass+",
	"description" : "View PolyRatings score directly on Pass",
	"version": "0.1",
	"permissions" : [
		"webRequest",
		"*://*.polyratings.com/"
		],
	"content_scripts": [
		{
			"matches": ["http://pass.calpoly.edu/main.html"],
			"js": ["jquery-2.1.4.min.js","content.js"],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": ["background.js"]
	}
}